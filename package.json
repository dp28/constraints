{
  "name": "constraints",
  "version": "0.0.0",
  "author": "",
  "main": "build/index.js",
  "dependencies": {
    "minizinc-solver": "^0.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.42",
    "chai": "^4.1.2",
    "mocha": "3.5.0",
    "tslint": "5.7.0",
    "typescript": "2.5.2"
  },
  "scripts": {
    "clean": "rm -rf build",
    "compile": "tsc --pretty",
    "compile:watch": "tsc --pretty -w",
    "lint": "tslint 'src/**/*.ts' --force",
    "test": "mocha -r ts-node/register src/**/*.spec.ts solver-tests/**/*.spec.ts",
    "test:unit": "mocha -r ts-node/register src/**/*.spec.ts",
    "test:solvers": "mocha -r ts-node/register solver-tests/**/*.spec.ts",
    "test:watch": "npm run test -- --watch --watch-extensions ts --growl",
    "test:unit:watch": "npm run test:unit -- --watch --watch-extensions ts --growl",
    "test:solvers:watch": "npm run test:solvers -- --watch --watch-extensions ts --growl"
  }
}
